# Variáveis de Ambiente Otimizadas para Supabase
# Configurações para melhor performance em desenvolvimento

# Docker Compose
COMPOSE_PARALLEL_LIMIT=4
COMPOSE_HTTP_TIMEOUT=120
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# PostgreSQL Otimizações
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=128MB
POSTGRES_EFFECTIVE_CACHE_SIZE=512MB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Supabase Performance
SUPABASE_DB_MAX_CONNECTIONS=100
SUPABASE_API_MAX_ROWS=1000
SUPABASE_STORAGE_FILE_SIZE_LIMIT=50MiB

# Desabilitar recursos desnecessários
SUPABASE_ANALYTICS_ENABLED=false
SUPABASE_POOLER_ENABLED=false
SUPABASE_WEBHOOKS_ENABLED=false

# Timeouts otimizados
SUPABASE_REQUEST_TIMEOUT=30
SUPABASE_CONNECTION_TIMEOUT=10

# Logs
SUPABASE_LOG_LEVEL=warn
POSTGRES_LOG_STATEMENT=none
POSTGRES_LOG_MIN_DURATION_STATEMENT=1000
{
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "target": "es2022",
    "moduleResolution": "bundler"
  },
  "lint": {
    "rules": {
      "exclude": ["no-empty", "no-explicit-any", "prefer-const"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "imports": {
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.7"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read index.ts"
  }
}